{
  "name": "christian-git",
  "version": "2.3.0",
  "description": "A collection of Christianized aliases to sanctify your Git workflow.",
  "keywords": [
    "git",
    "git alias",
    "version control",
    "vcs",
    "faith",
    "religion",
    "christian"
  ],
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./**/*.js",
    "prettify": "prettier \"./**/*.js\" --write",
    "clean-up-and-add": "npm run lint && npm run prettify && git add -A"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexmacarthur/christian-git.git"
  },
  "pre-commit": [
    "clean-up-and-add"
  ],
  "author": "Alex MacArthur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexmacarthur/christian-git/issues"
  },
  "homepage": "https://github.com/alexmacarthur/christian-git#readme",
  "bin": {
    "Jesus": "./index.js",
    "christian-git": "./index.js"
  },
  "dependencies": {
    "chalk": "^2.4.2"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.16.4"
  }
}
